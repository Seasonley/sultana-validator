{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": true,
    "target": "es5", //指定ECMAScript目标版本 "ES3"（默认）
    "allowJs": true, //允许编译javascript文件。
    "strict": true, //启用所有严格类型检查选项s
    "module": "commonjs", //指定生成哪个模块系统代码
    "baseUrl": "./",
    // "suppressImplicitAnyIndexErrors": true, //阻止对缺少索引签名的索引对象报错
  },
  "exclude": ["node_modules"],
  "include": ["src/*"]
}